<main>

    <section>

        <form id="SignIn" class="validate initial" method="post" target="/auth/laundree">
            <h1>Log in to</h1>
            <a href="/" id="Logo">
                <svg id="Logo">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Logo"></use>
                </svg>
            </a>
            <div class="auth_alternatives">
                <a href="/auth/facebook{{#if facebook_auth_failure}}?rerequest=1{{/if}}" class="facebook">
                    <svg>
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Facebook"></use>
                    </svg>
                    Log in with Facebook
                </a>
                <a href="/auth/google" class="google">
                    <svg>
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#GooglePlus"></use>
                    </svg>
                    Log in with Google
                </a>
            </div>
            <div class="or">
                <span>OR</span>
            </div>
            <label class="validate" data-validate-error="Please enter your e-mail address.">
                <input type="text" name="name" placeholder="E-mail address" data-validate-type="email">
            </label>
            <label data-validate-error="Please enter your password" class="validate">
                <input type="password" name="password" placeholder="Password" data-validate-type="non-empty">
            </label>
            <div class="forgot">
                <a href="/auth/laundree/forgot" class="forgot">
                    Forgot your password?
                </a>
            </div>
            <input type="submit" value="Log in"/>
        </form>
    </section>
</main>
