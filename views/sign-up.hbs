<main>
    <a href="/">
        <svg id="Logo">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Logo"></use>
        </svg>
    </a>
    <ul id="StepList">
        <li>
            <svg class="step">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Step1"></use>
            </svg>
        </li>
        <li class="dots">
            <svg>
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Dots"></use>
            </svg>
        </li>
        <li>
            <svg class="step inactive">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Step2"></use>
            </svg>
        </li>
        <li class="dots">
            <svg>
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Dots"></use>
            </svg>
        </li>
        <li>
            <svg class="step inactive">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Step3"></use>
            </svg>
        </li>
    </ul>
    <section id="CreateAccount">
        <h1>
            Create an account
        </h1>
        <form>
            <label>
                <input type="text" placeholder="Full name"/>
            </label>
            <label>
                <input type="text" placeholder="E-mail address"/>
            </label>
            <label>
                <input type="password" placeholder="Password"/>
            </label>
            <label>
                <input type="checkbox"/>
                Accept terms and conditions
            </label>
            <div class="buttons">
                <button class="prev inactive">Previous</button>
                <button class="next">Next</button>
            </div>
        </form>
    </section>
    <section id="RegisterMachines">
        <h1>
            Register your machines
        </h1>
        <form>
            <ul>
                <li>
                    <div class="select_machine select">
                        <span class="value">
                            <svg class="machine">
                                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#WashingMachine"></use>
                            </svg>
                            <svg class="chevron">
                                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ChevronDown"></use>
                            </svg>

                        </span>
                        <input type="hidden" name="type"/>
                        <ul class="options">
                            <li>
                                <svg class="machine">
                                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#WashingMachine"></use>
                                </svg>
                                <span class="desc">
                                    Washing machine
                                </span>
                            </li>
                            <li>
                                <svg class="machine">
                                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Dryer"></use>
                                </svg>
                                <span class="desc">
                                    Tumble dryer
                                </span>
                            </li>
                        </ul>
                    </div>
                    <label>
                        <input type="text" placeholder="Machine name"/>
                    </label>
                    <svg class="delete">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Trash"></use>
                    </svg>
                </li>
                <li>
                    <div class="select_machine select">
                        <span class="value">
                            <svg class="machine">
                                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#WashingMachine"></use>
                            </svg>
                            <svg class="chevron">
                                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ChevronDown"></use>
                            </svg>

                        </span>
                        <input type="hidden" name="type"/>
                        <ul class="options">
                            <li class="active">
                                <svg class="machine">
                                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#WashingMachine"></use>
                                </svg>
                                <span class="desc">
                                    Washing machine
                                </span>
                            </li>
                            <li>
                                <svg class="machine">
                                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Dryer"></use>
                                </svg>
                                <span class="desc">
                                    Tumble dryer
                                </span>
                            </li>
                        </ul>
                    </div>
                    <label>
                        <input type="text" placeholder="Machine name"/>
                    </label>
                    <svg class="delete">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Trash"></use>
                    </svg>
                </li>
            </ul>
            <div class="add">
                <svg class="delete">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#Plus"></use>
                </svg>
                Add machine
            </div>
            <div class="buttons">
                <button class="prev">Previous</button>
                <button class="next">Next</button>
            </div>

        </form>
    </section>
</main>